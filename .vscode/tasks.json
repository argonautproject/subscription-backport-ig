{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build FSH and IG",
			"type": "shell",
			"command": "./build.sh",
			"windows": {
				"command": ".\\build.bat"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Start http-server",
			"type": "shell",
			"command": "http-server",
			"args": ["./output", "-d", "--cors", "-p 8181"],
			"windows": {
				"command": "http-server",
				"args": [".\\output", "-d", "--cors", "-p 8181"],
			},
			"problemMatcher": [],
			"isBackground": true
		}
	]
}